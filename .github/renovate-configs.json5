{
  "extends": ["config:best-practices"],
  "onboarding": false,
  "platform": "github",
  "forkProcessing": "enabled",
  "repositories": [
    "smartcommunitylab/wordpress"
  ],
  "bumpVersion": "patch",
  "semanticCommits": "enabled",
  "helm": {
    "enabled": true
  },
  "dockerfile": {
    "fileMatch": ["(^|/|\.|\.*)([Dd]ocker|[Cc]ontainer)file$"]
  },
  "packageRules": [
    {
      "enabled": true,
      "matchDatasources": [
        "docker"
      ]
    }
  ],
}
